{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "removeComments": true,
    "noEmitOnError": false,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "**/*.ts",
    "models/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}